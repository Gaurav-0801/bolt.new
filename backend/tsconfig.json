{
  "compilerOptions": {
    "target": "ES2020",                               
    "lib": ["ES2020", "DOM"],                         
    "module": "commonjs",                             
    "rootDir": "./src",                               
    "outDir": "./dist",                               

    "esModuleInterop": true,                          
    "strict": true,                                   
    "skipLibCheck": true,                             
    "forceConsistentCasingInFileNames": true          
  },
  "include": ["src"]
}
